<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/textView_resultado"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="35dp"
        android:background="#FFF"
        android:ems="10"
        android:gravity="bottom"
        android:text=""
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="334dp"
        android:layout_marginTop="50dp"
        android:columnCount="5"
        android:rowCount="5"
        android:useDefaultMargins="true"
        android:layout_gravity="center_horizontal"

        >

        <Button
            android:id="@+id/button_cuatro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_mas"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_row="3"
            android:text="+"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_menos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="-"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_cero2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="0"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_punto2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="."
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_tres2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="3"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_dos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_uno"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="2"
            android:text="1"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_mult"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_row="2"
            android:text="x"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_igual"
            android:layout_width="60dp"
            android:layout_height="127dp"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:text="="
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_div2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_row="1"
            android:text="/"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_del"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_row="0"
            android:text="DEL"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_cinco"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_marginRight="7dp"
            android:layout_row="1"
            android:text="5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_ocho"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_marginRight="7dp"
            android:layout_row="0"
            android:text="8"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_siete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_seis"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_nueve"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="9"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_on_off"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_column="4"
            android:layout_row="0"
            android:background="#CC0000"
            android:text="ON"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_porcentaje"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="%"
            android:textStyle="bold" />

        <Button
            android:id="@+id/parentesis_abre"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="4"
            android:text="("
            android:textStyle="bold" />

        <Button
            android:id="@+id/parentesis_cierra"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="4"
            android:text=")"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_row="4"
            android:text="^"
            android:textStyle="bold" />

        <Button
            android:id="@+id/raiz"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="4"
            android:layout_row="4"
            android:text="âˆš"
            android:textColorHint="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/factorial"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="4"
            android:layout_row="3"
            android:text="!"
            android:textColorHint="#000"
            android:textStyle="bold" />


    </GridLayout>


</LinearLayout>